<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#313131"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="wrap_content"
            android:layout_height="850px"
            app:srcCompat="@drawable/mapa"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvStartingCity"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:text="@string/strChooseCity"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textColor="#A3BBE8"
                />

            <Spinner
                android:id="@+id/spnStartingCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#A3BBE8"
                android:entries="@array/arrCitiesNames"
                android:foregroundTint="#A3BBE8"
                android:foregroundTintMode="screen"
                android:popupBackground="#A3BBE8" />

        </LinearLayout>

        <Button
            android:id="@+id/bttTSP"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:text="KOMIWOJAÅ»EROWANIE"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A3BBE8"
            android:textColor="#313131"
            />

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:text="" />


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>