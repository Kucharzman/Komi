<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#313131"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvStartingCity"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:text="@string/strChooseCity"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textColor="#A3BBE8"
                android:layout_marginTop="10dp"
                />

            <Spinner
                android:id="@+id/spnStartingCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#A3BBE8"
                android:entries="@array/arrCitiesNames"
                android:foregroundTint="#A3BBE8"
                android:foregroundTintMode="screen"
                android:popupBackground="#A3BBE8"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvEndCity"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:text="@string/strChooseEndCity"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textColor="#A3BBE8"
                android:layout_marginTop="10dp"
                />

            <Spinner
                android:id="@+id/spnEndCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#A3BBE8"
                android:entries="@array/arrCitiesNames"
                android:foregroundTint="#A3BBE8"
                android:foregroundTintMode="screen"
                android:popupBackground="#A3BBE8"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:text="Dystans:"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#A3BBE8"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/edtDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:backgroundTint="#A3BBE8"
                android:textColor="#A3BBE8"
                android:textSize="25sp"
                android:text="0"
                />
        </LinearLayout>

        <Button
            android:id="@+id/bttDistAcc"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#A3BBE8"
            android:text="Zatwierdź dystans"
            android:textColor="#313131" />

        <Button
            android:id="@+id/bttTSP"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A3BBE8"
            android:text="KOMIWOJAŻEROWANIE"
            android:textColor="#313131" />

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#A3BBE8"
            android:textAlignment="center"
            />


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>